<h1 class="text-center mb5">Books</h1>

<div class="text-center mb15">
  <%= link_to 'New Book', new_book_path %>
</div>

<div class="panel">
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Isbn</th>
            <th>Year</th>
            <th>Pages</th>
            <th>Publishing house</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.isbn %></td>
              <td><%= book.year %></td>
              <td><%= book.pages %></td>
              <td><%= book.publishing_house %></td>
              <td class="action"><%= link_to 'Show', book,
                class: "btn btn-sm btn-block btn-default" %></td>
              <td class="action"><%= link_to 'Edit', edit_book_path(book),
                class: "btn btn-sm btn-block btn-primary" %></td>
              <td class="action"><%= link_to 'Destroy', book,
                class: "btn btn-sm btn-block btn-danger",
                method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="text-center mu15">
      <%= paginate @books %>
    </div>
  </div>
</div>

